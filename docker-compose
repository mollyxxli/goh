version: '3.3'
  
services:
   mysql:
     image: mariadb:latest
     container_name: mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: MyDBRoot123
       MYSQL_DATABASE: cloud_computing 
       MYSQL_USER: php
       MYSQL_PASSWORD: php
     networks:
       - mynet


   myphp:
     build:
       context: ./php
       dockerfile: dockerfile
     depends_on:
       - mysql
     container_name: myphp
     volumes: 
       - $HOME/goh/src:/var/www/html
     restart: always
     ports:
       - "9000:9000"
     networks:
       - mynet

   mynginx:
     depends_on:
       - myphp
     image: nginx:latest
     container_name: mynginx
     restart: always
     ports:
       - "8080:80"
     volumes:
       - $HOME/goh/src:/var/www/html
       - $HOME/goh/src/nginx.ini:/etc/nginx/conf.d/default.conf
     networks:
       - mynet

   phpMyAdmin:
     image: phpmyadmin:latest
     container_name: phpMyAdmin
     ports:
       - "8082:80"
     restart: always
     environment:
       PMA_HOST: mysql
       MYSQL_USER: php
       MYSQL_PASSWORD: php
     networks:
       - mynet    
networks:
    mynet:
       driver: bridge